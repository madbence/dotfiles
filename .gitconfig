[core]
  editor = vim
[push]
  default = upstream
[rebase]
  autosqash = true
[branch]
  autosetuprebase = always
[interactive]
  singlekey = true
[advice]
  statusHints = false
  pushNonFastForward = false
[diff]
  renames = copies
  mnemonicprefix = true
  colorMoved = zebra
[difftool]
  prompt = false
[pager]
  difftool = true
