[color]
  ui = auto
[core]
  editor = /Applications/MacVim.app/Contents/MacOS/Vim
[push]
  default = upstream
[rebase]
  autosqash = true
[branch]
  autosetuprebase = always
[interactive]
  singlekey = true
[advice]
  statusHints = false
  pushNonFastForward = false
[diff]
  renames = copies
  mnemonicprefix = true
